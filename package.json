{
  "name": "tbwa-unified-platform",
  "version": "1.0.0",
  "description": "TBWA Unified Platform - Neural DataBank with Medallion Lakehouse Architecture",
  "private": true,
  "workspaces": [
    "platforms/creative-ops/ces-jampacked",
    "apps/scout-dashboard",
    "platforms/hr-admin",
    "platforms/finance",
    "platforms/operations",
    "platforms/corporate",
    "platforms/face-ops",
    "platforms/qa-class",
    "infrastructure/mcp-services/*",
    "infrastructure/shared-libs"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces --if-present",
    "validate:docs": "node scripts/validate-docs.mjs",
    "clean": "npm run clean --workspaces",
    "install-all": "npm install --workspaces",
    "dev:ces": "npm run dev --workspace=platforms/creative-ops/ces-jampacked",
    "dev:scout": "npm run dev --workspace=apps/scout-dashboard",
    "build:ces": "npm run build --workspace=platforms/creative-ops/ces-jampacked",
    "build:scout": "npm run build --workspace=apps/scout-dashboard",
    "start:mcp-reader": "node infrastructure/mcp-services/reader/server.js",
    "start:mcp-writer": "node infrastructure/mcp-services/writer/server.js",
    "db:seed:scout": "echo 'Run: psql $DATABASE_URL -f infrastructure/database/supabase/migrations/053_scout_full_seed_18k.sql'",
    "db:migrate:scout": "echo 'Apply migrations 051, 052, 053 in order via Supabase dashboard or psql'"
  },
  "keywords": [
    "tbwa",
    "neural-databank",
    "medallion-lakehouse",
    "mcp",
    "supabase",
    "ai-platform"
  ],
  "author": "TBWA Philippines",
  "license": "MIT",
  "devDependencies": {
    "lerna": "^8.0.0",
    "nx": "^18.0.0",
    "turbo": "^1.10.0"
  },
  "engines": {
    "node": ">=20.0.0",
        "npm": ">9.0.0"
  }
}
