{
  "name": "TBWA Agency Databank Theme",
  "version": "1.0.0",
  "description": "Unified design tokens for TBWA Agency Databank - shared between React frontend and Odoo backend",
  "colors": {
    "brand": {
      "yellow": {
        "hsl": "51 100% 50%",
        "hex": "#FFDD00",
        "rgb": "255, 221, 0"
      },
      "turquoise": {
        "hsl": "160 100% 50%",
        "hex": "#00FFAA",
        "rgb": "0, 255, 170"
      },
      "black": {
        "hsl": "0 0% 0%",
        "hex": "#000000",
        "rgb": "0, 0, 0"
      },
      "white": {
        "hsl": "0 0% 100%",
        "hex": "#FFFFFF",
        "rgb": "255, 255, 255"
      },
      "gray": {
        "hsl": "0 0% 33%",
        "hex": "#545454",
        "rgb": "84, 84, 84"
      },
      "lightGray": {
        "hsl": "0 0% 96%",
        "hex": "#F5F5F5",
        "rgb": "245, 245, 245"
      }
    },
    "semantic": {
      "primary": {
        "default": "brand.yellow",
        "foreground": "brand.black"
      },
      "secondary": {
        "default": "brand.turquoise",
        "foreground": "brand.black"
      },
      "destructive": {
        "hsl": "348 100% 50%",
        "hex": "#FF0055",
        "foreground": "brand.white"
      },
      "muted": {
        "hsl": "0 0% 96%",
        "foreground": "0 0% 33%"
      }
    },
    "light": {
      "background": "0 0% 100%",
      "foreground": "0 0% 0%",
      "card": "0 0% 100%",
      "cardForeground": "0 0% 0%",
      "popover": "0 0% 100%",
      "popoverForeground": "0 0% 0%",
      "border": "0 0% 80%",
      "input": "0 0% 96%",
      "ring": "51 100% 50%"
    },
    "dark": {
      "background": "222.2 84% 4.9%",
      "foreground": "210 40% 98%",
      "card": "222.2 84% 4.9%",
      "cardForeground": "210 40% 98%",
      "popover": "222.2 84% 4.9%",
      "popoverForeground": "210 40% 98%",
      "border": "217.2 32.6% 17.5%",
      "input": "217.2 32.6% 17.5%",
      "ring": "212.7 26.8% 83.9%"
    },
    "sidebar": {
      "light": {
        "background": "0 0% 98%",
        "foreground": "240 5.3% 26.1%",
        "primary": "240 5.9% 10%",
        "primaryForeground": "0 0% 98%",
        "accent": "240 4.8% 95.9%",
        "accentForeground": "240 5.9% 10%",
        "border": "220 13% 91%",
        "ring": "217.2 91.2% 59.8%"
      },
      "dark": {
        "background": "240 5.9% 10%",
        "foreground": "240 4.8% 95.9%",
        "primary": "224.3 76.3% 48%",
        "primaryForeground": "0 0% 100%",
        "accent": "240 3.7% 15.9%",
        "accentForeground": "240 4.8% 95.9%",
        "border": "240 3.7% 15.9%",
        "ring": "217.2 91.2% 59.8%"
      }
    },
    "navigation": {
      "background": "0 0% 0%",
      "text": "0 0% 100%",
      "hover": "51 100% 50%"
    },
    "chat": {
      "background": "0 0% 0%",
      "text": "0 0% 100%",
      "border": "51 100% 50%",
      "glow": "160 100% 50%"
    }
  },
  "spacing": {
    "radius": "0.5rem",
    "radiusSm": "calc(0.5rem - 4px)",
    "radiusMd": "calc(0.5rem - 2px)",
    "radiusLg": "0.5rem"
  },
  "typography": {
    "fontFamily": {
      "sans": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
      "mono": "'Geist Mono', 'JetBrains Mono', 'Fira Code', monospace"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    },
    "fontWeight": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    },
    "lineHeight": {
      "tight": "1.25",
      "normal": "1.5",
      "relaxed": "1.625"
    }
  },
  "shadows": {
    "elegant": "0 4px 12px rgba(0, 0, 0, 0.08)",
    "glow": "0 0 20px hsla(160, 100%, 50%, 0.3)",
    "sm": "0 1px 2px rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px rgba(0, 0, 0, 0.1)",
    "lg": "0 10px 15px rgba(0, 0, 0, 0.1)",
    "xl": "0 20px 25px rgba(0, 0, 0, 0.15)"
  },
  "transitions": {
    "smooth": "all 0.3s cubic-bezier(0.4, 0, 0.2, 1)",
    "fast": "all 0.15s ease-in-out",
    "normal": "all 0.2s ease-in-out"
  },
  "gradients": {
    "primary": "linear-gradient(135deg, hsl(51 100% 50%), hsl(160 100% 50%))",
    "subtle": "linear-gradient(180deg, hsl(0 0% 100%), hsl(0 0% 96%))"
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1400px"
  },
  "container": {
    "maxWidth": "1400px",
    "padding": "2rem"
  }
}
