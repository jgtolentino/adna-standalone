# =============================================================================
# TBWA Agency Databank - Environment Configuration
# =============================================================================
# This file documents all environment variables used across the platform.
# Copy to .env.local and fill in your values.
#
# SECURITY NOTE: Never commit actual secrets to version control!
# =============================================================================

# =============================================================================
# SUPABASE CONFIGURATION (Required)
# =============================================================================
# These are required for all database operations

# For Next.js apps (Scout Dashboard)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# For Vite apps (CES Jampacked)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Server-side only (NEVER expose to client!)
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# PYTHON SERVICE CONFIGURATION
# =============================================================================
# Required for Palette Forge and CES Gateway services

# API authentication token (required for production)
CES_API_TOKEN=your-secure-api-token
API_TOKEN=your-secure-api-token

# CORS configuration (comma-separated origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-domain.vercel.app

# Environment identifier
ENVIRONMENT=development

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Mock data usage (set to 0 in production!)
NEXT_PUBLIC_USE_MOCK=0
VITE_USE_MOCK=0

# Strict datasource validation (recommended for production)
NEXT_PUBLIC_STRICT_DATASOURCE=true

# Environment identifier for client
NEXT_PUBLIC_ENVIRONMENT=development

# =============================================================================
# OPTIONAL: AI SERVICES
# =============================================================================

# Claude Integration
VITE_CLAUDE_API_KEY=your-claude-api-key
VITE_CLAUDE_MODEL=claude-4-sonnet

# OpenAI (for embeddings in Python services)
OPENAI_API_KEY=your-openai-api-key

# =============================================================================
# OPTIONAL: MONITORING & LOGGING
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
VITE_LOG_LEVEL=info

# Sentry error tracking
VITE_SENTRY_DSN=your-sentry-dsn

# =============================================================================
# OPTIONAL: MCP SERVICES
# =============================================================================

VITE_MCP_HTTP_URL=https://mcp-sqlite-server.onrender.com
VITE_MCP_API_KEY=your-api-key-here

# =============================================================================
# OPTIONAL: FILE UPLOAD & STORAGE
# =============================================================================

VITE_MAX_FILE_SIZE=500000000
VITE_STORAGE_BUCKET=tbwa-databank-uploads
VITE_STORAGE_REGION=us-east-1
