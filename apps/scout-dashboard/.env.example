# Scout Dashboard Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# REQUIRED: Supabase Configuration
# =============================================================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# =============================================================================
# OPTIONAL: Feature Flags
# =============================================================================
# Set to 'true' to enforce Supabase-only data (blocks CSV imports)
NEXT_PUBLIC_STRICT_DATASOURCE=true

# Set to '1' to enable mock data (development only, ignored in production)
NEXT_PUBLIC_USE_MOCK=0

# Environment identifier: development | preview | production
NEXT_PUBLIC_ENVIRONMENT=development

# =============================================================================
# OPTIONAL: Mapbox Configuration
# =============================================================================
# Get this from: https://account.mapbox.com/access-tokens/
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token-here

# =============================================================================
# OPTIONAL: Server-side only (not exposed to client)
# =============================================================================
# Supabase service role key (for server-side operations)
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# CES API integration token
# CES_API_TOKEN=your-ces-api-token-here

# =============================================================================
# OPTIONAL: Observability
# =============================================================================
# Logflare integration for structured logging
# LOGFLARE_API_KEY=your-logflare-key
# LOGFLARE_SOURCE_ID=your-logflare-source-id
