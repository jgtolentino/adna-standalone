<!-- custom_addons/ipai_scout_retail_core/views/geo_ph_views.xml -->
<odoo>
    <!-- Region tree & form -->
    <record id="view_ipai_region_tree" model="ir.ui.view">
        <field name="name">ipai.region.tree</field>
        <field name="model">ipai.region</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="state_id"/>
            </tree>
        </field>
    </record>

    <record id="view_ipai_region_form" model="ir.ui.view">
        <field name="name">ipai.region.form</field>
        <field name="model">ipai.region</field>
        <field name="arch" type="xml">
            <form string="Region">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="country_id"/>
                        <field name="state_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- City tree & form -->
    <record id="view_ipai_city_tree" model="ir.ui.view">
        <field name="name">ipai.city.tree</field>
        <field name="model">ipai.city</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="region_id"/>
                <field name="state_id"/>
            </tree>
        </field>
    </record>

    <record id="view_ipai_city_form" model="ir.ui.view">
        <field name="name">ipai.city.form</field>
        <field name="model">ipai.city</field>
        <field name="arch" type="xml">
            <form string="City / Municipality">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="region_id"/>
                        <field name="state_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Barangay tree & form -->
    <record id="view_ipai_barangay_tree" model="ir.ui.view">
        <field name="name">ipai.barangay.tree</field>
        <field name="model">ipai.barangay</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="city_id"/>
                <field name="region_id"/>
            </tree>
        </field>
    </record>

    <record id="view_ipai_barangay_form" model="ir.ui.view">
        <field name="name">ipai.barangay.form</field>
        <field name="model">ipai.barangay</field>
        <field name="arch" type="xml">
            <form string="Barangay">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="city_id"/>
                        <field name="region_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_ipai_region" model="ir.actions.act_window">
        <field name="name">Regions</field>
        <field name="res_model">ipai.region</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_ipai_city" model="ir.actions.act_window">
        <field name="name">Cities / Municipalities</field>
        <field name="res_model">ipai.city</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_ipai_barangay" model="ir.actions.act_window">
        <field name="name">Barangays</field>
        <field name="res_model">ipai.barangay</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu entries under Contacts / Configuration -->
    <menuitem id="menu_ipai_geo_root"
              name="Scout Geo (PH)"
              parent="contacts.menu_contacts_configuration"
              sequence="50"/>

    <menuitem id="menu_ipai_region"
              name="Regions"
              parent="menu_ipai_geo_root"
              action="action_ipai_region"
              sequence="10"/>

    <menuitem id="menu_ipai_city"
              name="Cities / Municipalities"
              parent="menu_ipai_geo_root"
              action="action_ipai_city"
              sequence="20"/>

    <menuitem id="menu_ipai_barangay"
              name="Barangays"
              parent="menu_ipai_geo_root"
              action="action_ipai_barangay"
              sequence="30"/>
</odoo>
