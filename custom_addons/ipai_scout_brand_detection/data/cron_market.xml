<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="ir_cron_ipai_sku_catalog_sync" model="ir.cron">
        <field name="name">IPAI – Sync SKU Catalog to Scraper</field>
        <field name="model_id" ref="model_ipai_market_scraper_config"/>
        <field name="state">code</field>
        <field name="code">model.cron_sync_sku_catalog()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>

    <record id="ir_cron_ipai_competitor_prices" model="ir.cron">
        <field name="name">IPAI – Fetch Competitor Price Snapshots</field>
        <field name="model_id" ref="model_ipai_market_scraper_config"/>
        <field name="state">code</field>
        <field name="code">model.cron_fetch_competitor_prices()</field>
        <field name="interval_number">3</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>
</odoo>
