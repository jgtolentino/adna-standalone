<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_ipai_market_channel_tree" model="ir.ui.view">
        <field name="name">ipai.market.channel.tree</field>
        <field name="model">ipai.market.channel</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_ipai_market_channel_form" model="ir.ui.view">
        <field name="name">ipai.market.channel.form</field>
        <field name="model">ipai.market.channel</field>
        <field name="arch" type="xml">
            <form string="Market Channel">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="active"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ipai_product_competitor_tree" model="ir.ui.view">
        <field name="name">ipai.product.competitor.tree</field>
        <field name="model">ipai.product.competitor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id"/>
                <field name="competitor_name"/>
                <field name="competitor_sku"/>
                <field name="competitor_brand"/>
                <field name="channel_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_ipai_product_competitor_form" model="ir.ui.view">
        <field name="name">ipai.product.competitor.form</field>
        <field name="model">ipai.product.competitor</field>
        <field name="arch" type="xml">
            <form string="Competitor Mapping">
                <sheet>
                    <group>
                        <field name="product_id"/>
                        <field name="competitor_name"/>
                        <field name="competitor_sku"/>
                        <field name="competitor_brand"/>
                        <field name="channel_id"/>
                        <field name="website_url"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ipai_product_price_snapshot_tree" model="ir.ui.view">
        <field name="name">ipai.product.price.snapshot.tree</field>
        <field name="model">ipai.product.price.snapshot</field>
        <field name="arch" type="xml">
            <tree>
                <field name="snapshot_at"/>
                <field name="product_id"/>
                <field name="competitor_id"/>
                <field name="channel_id"/>
                <field name="our_price"/>
                <field name="competitor_price"/>
                <field name="competitor_promo_price"/>
                <field name="promo_flag"/>
                <field name="in_stock"/>
                <field name="price_diff_abs"/>
                <field name="price_diff_pct"/>
            </tree>
        </field>
    </record>

    <record id="view_ipai_product_price_snapshot_form" model="ir.ui.view">
        <field name="name">ipai.product.price.snapshot.form</field>
        <field name="model">ipai.product.price.snapshot</field>
        <field name="arch" type="xml">
            <form string="Product Price Snapshot">
                <sheet>
                    <group>
                        <field name="snapshot_at"/>
                        <field name="product_id"/>
                        <field name="competitor_id"/>
                        <field name="channel_id"/>
                        <field name="currency_id"/>
                    </group>
                    <group string="Prices">
                        <field name="our_price"/>
                        <field name="competitor_price"/>
                        <field name="competitor_promo_price"/>
                        <field name="promo_flag"/>
                        <field name="in_stock"/>
                    </group>
                    <group string="Differences">
                        <field name="price_diff_abs"/>
                        <field name="price_diff_pct"/>
                    </group>
                    <group string="Raw Payload">
                        <field name="raw_payload"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ipai_market_scraper_config_form" model="ir.ui.view">
        <field name="name">ipai.market.scraper.config.form</field>
        <field name="model">ipai.market.scraper.config</field>
        <field name="arch" type="xml">
            <form string="Market Scraper Config">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                    <group string="Endpoints">
                        <field name="sku_scraper_url"/>
                        <field name="price_scraper_url"/>
                        <field name="auth_token" password="True"/>
                        <field name="timeout"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ipai_market_channel" model="ir.actions.act_window">
        <field name="name">Market Channels</field>
        <field name="res_model">ipai.market.channel</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_ipai_product_competitor" model="ir.actions.act_window">
        <field name="name">Competitor Mappings</field>
        <field name="res_model">ipai.product.competitor</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_ipai_product_price_snapshot" model="ir.actions.act_window">
        <field name="name">Price Snapshots</field>
        <field name="res_model">ipai.product.price.snapshot</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_ipai_market_scraper_config" model="ir.actions.act_window">
        <field name="name">Scraper Config</field>
        <field name="res_model">ipai.market.scraper.config</field>
        <field name="view_mode">form</field>
    </record>
</odoo>
