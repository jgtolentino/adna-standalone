<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_ipai_brand_feedback_tree" model="ir.ui.view">
        <field name="name">ipai.brand.feedback.tree</field>
        <field name="model">ipai.brand.feedback</field>
        <field name="arch" type="xml">
            <tree>
                <field name="create_date"/>
                <field name="store_id"/>
                <field name="brand_id"/>
                <field name="metric_id"/>
                <field name="state"/>
                <field name="expected_facings"/>
                <field name="verified_presence"/>
                <field name="verified_facings"/>
                <field name="model_version"/>
                <field name="reprocess_model_version"/>
            </tree>
        </field>
    </record>

    <record id="view_ipai_brand_feedback_form" model="ir.ui.view">
        <field name="name">ipai.brand.feedback.form</field>
        <field name="model">ipai.brand.feedback</field>
        <field name="arch" type="xml">
            <form string="Brand Feedback">
                <header>
                    <button name="action_mark_annotated" type="object" string="Mark Annotated"/>
                    <button name="action_mark_sent_to_training" type="object" string="Mark Sent to Training"/>
                </header>
                <sheet>
                    <group>
                        <field name="metric_id"/>
                        <field name="image_id"/>
                        <field name="store_id" readonly="1"/>
                        <field name="brand_id" readonly="1"/>
                        <field name="state"/>
                        <field name="verification_source"/>
                    </group>
                    <group string="Expected vs Verified">
                        <field name="expected_presence"/>
                        <field name="expected_facings"/>
                        <field name="verified_presence"/>
                        <field name="verified_facings"/>
                    </group>
                    <group string="Models">
                        <field name="model_version"/>
                        <field name="reprocess_model_version"/>
                        <field name="reward"/>
                    </group>
                    <group string="Annotation">
                        <field name="annotation_payload"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ipai_brand_feedback" model="ir.actions.act_window">
        <field name="name">Brand Feedback</field>
        <field name="res_model">ipai.brand.feedback</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
